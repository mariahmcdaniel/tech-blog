<section class="container-fluid viewPostContainer">
  <div class="row justify-content-md-center viewPost">
    <div class="col-12">
      <header>{{title}}</header>
      <p>{{content}}</p>
      <p class="auth-time">Written By:{{users.username}} {{format_date created_at}}</p>
    </div>
    <div class="row justify-content-md-center commentscontainer">
      {{#each posts.comments as |comment|}}
      <div class="col-12">
        <header class="commentTitle">{{comment.users.[0].username}}</header> 
        <p class="commentText">{{comment.text}}</p> 
      </div>
      {{/each}}
    </div>
  </div>
</section>